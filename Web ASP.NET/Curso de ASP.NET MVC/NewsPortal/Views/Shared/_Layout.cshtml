<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Portal de noticias DevMedia</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />>

</head>
<body>
    <div class="container">
        <div class="jumbotron">
            <h1>
                Portal de notícias
            </h1>
        </div>

        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    @Html.ActionLink("Inicio", "Index", "News", null, new { @class = "navbar-brand" })
                </div>

            </div>
        </div>


        <div class="row">
            <div class="col-md-9">
                @RenderBody()
            </div>
            <div class="col-md-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <p class="panel-title">Buscar Notícias</p>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Seach", "News", FormMethod.Get))
                        {
                            <input type="text" class="form-control" name="texto" placeholder="Buscar por..." />
                        }
                    </div>
                </div>
            </div>

        </div>

    </div>
    <!--<script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>-->
</body>
</html>